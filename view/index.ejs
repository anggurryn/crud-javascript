<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>learn node js</title>
  </head>

  <body>
    <div class="container">
      <div class="card mt-5">
        <div class="card-header d-flex justify-content-between">
          <h2><%= title %></h2>
          <a href="/adduser" class="btn btn-primary">Add Mahasiswa</a>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Nama</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% user.forEach((user)=>{ %>
              <tr>
                <td><%= user.nama %></td>
                <td><%= user.mobile %></td>
                <td><%= user.class %></td>
                <td class="col-md-4">
                  <a href="/edit?id=<%= user.id %>" class="btn btn-info"
                    >Update</a
                  >
                  <a
                    href="/delete?id=<%= user.id %>"
                    onclick="return confirm('Delete this Mahasiswa')"
                    class="btn btn-danger"
                    >Delete</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
